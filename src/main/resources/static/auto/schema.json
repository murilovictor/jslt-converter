{
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "required": [
    "data",
    "links",
    "meta"
  ],
  "properties": {
    "data": {
      "type": "object",
      "required": [
        "brand"
      ],
      "properties": {
        "brand": {
          "type": "object",
          "$schema": "http://json-schema.org/draft-04/schema#",
          "required": [
            "name",
            "companies"
          ],
          "properties": {
            "name": {
              "type": "string",
              "description": "Nome da marca reportada pelo participante do Open Insurance. O conceito a que se refere a marca é em essência uma promessa das sociedades sob ela em fornecer uma série específica de atributos, benefícios e serviços uniformes aos clientes."

            },
            "companies": {
              "type": "array",
              "items": {
                "required": [
                  "name",
                  "cnpjNumber",
                  "products"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Nome da sociedade pertencente à marca."
                  },
                  "products": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": [
                        "name",
                        "code",
                        "coverages",
                        "carParts",
                        "carModels",
                        "vehicleOvernightZipCode",
                        "additional",
                        "assistanceServices",
                        "termsAndConditions",
                        "terms",
                        "customerService",
                        "premiumPayment",
                        "minimumRequirements",
                        "targetAudiences"
                      ],
                      "properties": {
                        "code": {
                          "type": "string",
                          "description": "Código único a ser definido pela sociedade."
                        },
                        "name": {
                          "type": "string",
                          "description": "Nome comercial do produto, pelo qual é identificado nos canais de distribuição e atendimento da sociedade."

                        },
                        "terms": {
                          "type": "array",
                          "items": {
                            "enum": [
                              "ANUAL",
                              "ANUAL_INTERMITENTE",
                              "PLURIANUAL",
                              "PLURIANUAL_INTERMITENTE",
                              "SEMESTRAL",
                              "SEMESTRAL_INTERMITENTE",
                              "MENSAL",
                              "MENSAL_INTERMITENTE",
                              "DIARIO",
                              "DIARIO_INTERMITENTE",
                              "OUTROS"
                            ],
                            "type": "string",
                            "example": "ANUAL"
                          },
                          "description": "Prazo."
                        },
                        "carParts": {
                          "type": "array",
                          "items": {
                            "required": [
                              "carPartCondition",
                              "carPartType"
                            ],
                            "properties": {
                              "carPartType": {
                                "enum": [
                                  "ORIGINAIS",
                                  "COMPATIVEIS",
                                  "AMBAS"
                                ],
                                "type": "string",
                                "example": "ORIGINAIS",
                                "description": "Originais e não originais"
                              },
                              "carPartCondition": {
                                "enum": [
                                  "NOVAS",
                                  "USADAS",
                                  "AMBAS"
                                ],
                                "type": "string",
                                "example": "NOVAS",
                                "description": "Nova ou usada"
                              }
                            }
                          },
                          "$schema": "http://json-schema.org/draft-04/schema#",
                          "description": "Tipo de peça utilizada para reparação."
                        },
                        "carModels": {
                          "type": "array",
                          "items": {
                            "required": [
                              "manufacturer",
                              "model",
                              "year",
                              "fipeCode"
                            ],
                            "properties": {
                              "year": {
                                "type": "integer",
                                "example": 2018,
                                "maxLength": 4,
                                "description": "Ano de fabricação."
                              },
                              "model": {
                                "type": "string",
                                "example": "KA",
                                "maxLength": 80,
                                "description": "Modelo"
                              },
                              "fipeCode": {
                                "type": "string",
                                "description": "Código FIPE do veículo."
                              },
                              "manufacturer": {
                                "type": "string",
                                "example": "FORD",
                                "maxLength": 20,
                                "description": "Fabricante"
                              }
                            }
                          },
                          "$schema": "http://json-schema.org/draft-04/schema#",
                          "description": "Listagem de modelos / ano de veículos. Deve ser padronizada na proposta técnica submetida pela Estrutura Inicial de Governança para observância comum por todas as sociedades participantes."

                        },
                        "coverages": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "required": [
                              "coverage",
                              "coverageDetail",
                              "coveragePermissionSeparteAcquisition",
                              "coverageAttributes"
                            ],
                            "properties": {
                              "coverage": {
                                "enum": [
                                  "CASCO_COMPREENSIVA_COLISAO_INCENDIO_ROUBO_FURTO",
                                  "CASCO_INCENDIO_ROUBO_FURTO",
                                  "CASCO_ROUBO_FURTO",
                                  "CASCO_INCENDIO",
                                  "CASCO_ALAGAMENTO",
                                  "CASCO_COLISAO_INDENIZACAO_PARCIAL",
                                  "CASCO_COLISAO_INDENIZACAO_INTEGRAL",
                                  "RESPONSABILIDADE_CIVIL_FACULTATIVA_VEICULOS_RCFV",
                                  "RESPONSABILIDADE_CIVIL_FACULTATIVA_CONDUTOR_RCFC",
                                  "ACIDENTE_PESSOAIS_PASSAGEIROS_VEICULO",
                                  "ACIDENTE_PESSOAIS_PASSAGEIROS_CONDUTOR",
                                  "VIDROS",
                                  "DIARIA_INDISPONIBILIDADE",
                                  "LFR_LANTERNAS_FAROIS_RETROVISORES",
                                  "ACESSORIOS_EQUIPAMENTOS",
                                  "CARRO_RESERVA",
                                  "PEQUENOS_REPAROS",
                                  "RESPONSABILIDADE_CIVIL_CARTA_VERDE",
                                  "VOUCHER_MOBILIDADE",
                                  "DESPESAS_EXTRAORDINARIAS",
                                  "GARANTIA_MECANICA",
                                  "OUTRAS"
                                ],
                                "type": "string",
                                "example": "VIDROS",
                                "description": "Conjunto de riscos elencados na apólice."
                              },
                              "coverageDetail": {
                                "type": "string",
                                "example": "Roubo total",
                                "maxLength": 1000,
                                "description": "Campo aberto para detalhamento de riscos possíveis dos produtos a ser feito para cada participante."

                              },
                              "coverageAttributes": {
                                "type": "object",
                                "$schema": "http://json-schema.org/draft-04/schema#",
                                "required": [
                                  "minLMI",
                                  "maxLMI",
                                  "contractBase",
                                  "newCarMaximumCalculatingPeriod",
                                  "fullIndemnityPercentage",
                                  "deductibleType",
                                  "fullIndemnityDeductible",
                                  "deductiblePaymentByCoverage",
                                  "deductiblePercentage",
                                  "mandatoryParticipation",
                                  "geographicScopeCoverage"
                                ],
                                "properties": {
                                  "maxLMI": {
                                    "type": "object",
                                    "$schema": "http://json-schema.org/draft-04/schema#",
                                    "required": [
                                      "amount",
                                      "unit"
                                    ],
                                    "properties": {
                                      "unit": {
                                        "type": "object",
                                        "$schema": "http://json-schema.org/draft-04/schema#",
                                        "required": [
                                          "code",
                                          "description"
                                        ],
                                        "properties": {
                                          "code": {
                                            "type": "string"
                                          },
                                          "description": {
                                            "type": "string"
                                          }
                                        }
                                      },
                                      "amount": {
                                        "type": "number"
                                      }
                                    }
                                  },
                                  "minLMI": {
                                    "type": "object",
                                    "$schema": "http://json-schema.org/draft-04/schema#",
                                    "required": [
                                      "amount",
                                      "unit"
                                    ],
                                    "properties": {
                                      "unit": {
                                        "type": "object",
                                        "$schema": "http://json-schema.org/draft-04/schema#",
                                        "required": [
                                          "code",
                                          "description"
                                        ],
                                        "properties": {
                                          "code": {
                                            "type": "string"
                                          },
                                          "description": {
                                            "type": "string"
                                          }
                                        }
                                      },
                                      "amount": {
                                        "type": "number"
                                      }
                                    }
                                  },
                                  "contractBase": {
                                    "type": "array",
                                    "items": {
                                      "type": "object",
                                      "required": [
                                        "contractBaseType"
                                      ],
                                      "properties": {
                                        "contractBaseType": {
                                          "enum": [
                                            "VALOR_DETERMINADO",
                                            "VALOR_MERCADO",
                                            "AMBOS"
                                          ],
                                          "type": "string",
                                          "example": "VALOR_DETERMINADO",
                                          "description": "Incidência ao capital segurado da cobertura de casco."
                                        },
                                        "contractBaseMaxValue": {
                                          "type": "object",
                                          "$schema": "http://json-schema.org/draft-04/schema#",
                                          "required": [
                                            "amount",
                                            "unit"
                                          ],
                                          "properties": {
                                            "unit": {
                                              "type": "object",
                                              "$schema": "http://json-schema.org/draft-04/schema#",
                                              "required": [
                                                "code",
                                                "description"
                                              ],
                                              "properties": {
                                                "code": {
                                                  "type": "string"
                                                },
                                                "description": {
                                                  "type": "string"
                                                }
                                              }
                                            },
                                            "amount": {
                                              "type": "number"
                                            }
                                          }
                                        },
                                        "contractBaseMinValue": {
                                          "type": "object",
                                          "$schema": "http://json-schema.org/draft-04/schema#",
                                          "required": [
                                            "amount",
                                            "unit"
                                          ],
                                          "properties": {
                                            "unit": {
                                              "type": "object",
                                              "$schema": "http://json-schema.org/draft-04/schema#",
                                              "required": [
                                                "code",
                                                "description"
                                              ],
                                              "properties": {
                                                "code": {
                                                  "type": "string"
                                                },
                                                "description": {
                                                  "type": "string"
                                                }
                                              }
                                            },
                                            "amount": {
                                              "type": "number"
                                            }
                                          }
                                        }
                                      }
                                    },
                                    "$schema": "http://json-schema.org/draft-04/schema#",
                                    "description": "Base de contratação."
                                  },
                                  "deductibleType": {
                                    "type": "array",
                                    "items": {
                                      "enum": [
                                        "NORMAL",
                                        "REDUZIDA",
                                        "ISENTA",
                                        "MAJORADA",
                                        "FLEXIVEL"
                                      ],
                                      "type": "string",
                                      "example": "NORMAL"
                                    },
                                    "description": "Listagem de tipo de franquia para cada tipo de cobertura do produto."

                                  },
                                  "newCarContractBase": {
                                    "type": "array",
                                    "items": {
                                      "type": "object",
                                      "required": [
                                        "contractBaseType"
                                      ],
                                      "properties": {
                                        "contractBaseType": {
                                          "enum": [
                                            "VALOR_DETERMINADO",
                                            "VALOR_MERCADO",
                                            "AMBOS"
                                          ],
                                          "type": "string",
                                          "example": "VALOR_DETERMINADO",
                                          "description": "Incidência ao capital segurado da cobertura de casco."
                                        },
                                        "contractBaseMaxValue": {
                                          "type": "object",
                                          "$schema": "http://json-schema.org/draft-04/schema#",
                                          "required": [
                                            "amount",
                                            "unit"
                                          ],
                                          "properties": {
                                            "unit": {
                                              "type": "object",
                                              "$schema": "http://json-schema.org/draft-04/schema#",
                                              "required": [
                                                "code",
                                                "description"
                                              ],
                                              "properties": {
                                                "code": {
                                                  "type": "string"
                                                },
                                                "description": {
                                                  "type": "string"
                                                }
                                              }
                                            },
                                            "amount": {
                                              "type": "number"
                                            }
                                          }
                                        },
                                        "contractBaseMinValue": {
                                          "type": "object",
                                          "$schema": "http://json-schema.org/draft-04/schema#",
                                          "required": [
                                            "amount",
                                            "unit"
                                          ],
                                          "properties": {
                                            "unit": {
                                              "type": "object",
                                              "$schema": "http://json-schema.org/draft-04/schema#",
                                              "required": [
                                                "code",
                                                "description"
                                              ],
                                              "properties": {
                                                "code": {
                                                  "type": "string"
                                                },
                                                "description": {
                                                  "type": "string"
                                                }
                                              }
                                            },
                                            "amount": {
                                              "type": "number"
                                            }
                                          }
                                        }
                                      }
                                    },
                                    "$schema": "http://json-schema.org/draft-04/schema#",
                                    "description": "Base de contratação."
                                  },
                                  "deductiblePercentage": {
                                    "type": "object",
                                    "$schema": "http://json-schema.org/draft-04/schema#",
                                    "required": [
                                      "amount",
                                      "unit"
                                    ],
                                    "properties": {
                                      "unit": {
                                        "type": "object",
                                        "$schema": "http://json-schema.org/draft-04/schema#",
                                        "required": [
                                          "code",
                                          "description"
                                        ],
                                        "properties": {
                                          "code": {
                                            "type": "string"
                                          },
                                          "description": {
                                            "type": "string"
                                          }
                                        }
                                      },
                                      "amount": {
                                        "type": "number"
                                      }
                                    }
                                  },
                                  "mandatoryParticipation": {
                                    "type": "string",
                                    "example": "Casco - RCF-V Danos",
                                    "maxLength": 300,
                                    "description": "Participação Obrigatória do Segurado."
                                  },
                                  "fullIndemnityDeductible": {
                                    "type": "boolean",
                                    "example": true,
                                    "description": "Franquia para Indenização Integral."
                                  },
                                  "fullIndemnityPercentage": {
                                    "type": "object",
                                    "$schema": "http://json-schema.org/draft-04/schema#",
                                    "required": [
                                      "amount",
                                      "unit"
                                    ],
                                    "properties": {
                                      "unit": {
                                        "type": "object",
                                        "$schema": "http://json-schema.org/draft-04/schema#",
                                        "required": [
                                          "code",
                                          "description"
                                        ],
                                        "properties": {
                                          "code": {
                                            "type": "string"
                                          },
                                          "description": {
                                            "type": "string"
                                          }
                                        }
                                      },
                                      "amount": {
                                        "type": "number"
                                      }
                                    }
                                  },
                                  "geographicScopeCoverage": {
                                    "type": "array",
                                    "items": {
                                      "enum": [
                                        "NACIONAL",
                                        "REGIONAL",
                                        "INTERNACIONAL",
                                        "OUTROS_PAISES"
                                      ],
                                      "type": "string",
                                      "example": "NACIONAL"
                                    },
                                    "description": "Listagem de abrangência geográfica do produto para fins de cada cobertura."

                                  },
                                  "deductiblePaymentByCoverage": {
                                    "type": "boolean",
                                    "description": "Sinalização para cada cobertura se a seguradora exige pagamento de franquia."

                                  },
                                  "geographicScopeCoverageOthers": {
                                    "type": "string",
                                    "description": "Âmbito geográficoda cobertura - Outros"
                                  },
                                  "newCarMaximumCalculatingPeriod": {
                                    "type": "integer",
                                    "example": 12,
                                    "maxLength": 3,
                                    "description": "Prazo máximo para apuração do valor a ser indenizado para veículo zero quilômetro. Em meses."

                                  }
                                },
                                "description": "Atributos da cobertura."
                              },
                              "coveragePermissionSeparteAcquisition": {
                                "type": "boolean",
                                "example": true,
                                "description": "Indicação se a cobertura permite contratação separada (por cobertura selecionada)."

                              }
                            }
                          },
                          "$schema": "http://json-schema.org/draft-04/schema#",
                          "description": "Listagem de coberturas incluídas no produto que deve observar a relação discriminada de coberturas, conforme Tabela II.5 do Anexo II"

                        },
                        "additional": {
                          "type": "array",
                          "items": {
                            "enum": [
                              "SORTEIO_GRATUITO",
                              "CLUBE_BENEFICIOS",
                              "CASHBACK",
                              "DESCONTOS",
                              "OUTROS"
                            ],
                            "type": "string",
                            "example": "SORTEIO_GRATUITO",
                            "description": "Adicionais"
                          }
                        },
                        "premiumPayment": {
                          "type": "object",
                          "$schema": "http://json-schema.org/draft-04/schema#",
                          "required": [
                            "paymentMethod",
                            "paymentType"
                          ],
                          "properties": {
                            "paymentType": {
                              "type": "array",
                              "items": {
                                "enum": [
                                  "A_VISTA",
                                  "PARCELADO",
                                  "AMBOS"
                                ],
                                "type": "string",
                                "example": "PARCELADO"
                              },
                              "description": "Forma de pagamento."
                            },
                            "paymentDetail": {
                              "type": "string",
                              "description": "Campo aberto para detalhamento do campo ‘Outros’ por cada participante."
                            },
                            "paymentMethod": {
                              "type": "array",
                              "items": {
                                "enum": [
                                  "CARTAO_CREDITO",
                                  "CARTAO_DEBITO",
                                  "DEBITO_CONTA_CORRENTE",
                                  "DEBITO_CONTA_POUPANCA",
                                  "BOLETO_BANCARIO",
                                  "PIX",
                                  "CONSIGINACAO_FOLHA_PAGAMENTO",
                                  "PONTOS_PROGRAMA_BENEFICIO",
                                  "OUTROS"
                                ],
                                "type": "string",
                                "example": "CARTAO_CREDITO"
                              },
                              "description": "Meio de pagamento escolhido pelo segurado."
                            }
                          },
                          "description": "Informações de pagamento de prêmio."
                        },
                        "customerService": {
                          "type": "array",
                          "items": {
                            "enum": [
                              "REDE_REFERENCIADA",
                              "LIVRE_ESCOLHA",
                              "REDE_REFERENCIADA_LIVRE_ESCOLHA"
                            ],
                            "type": "string",
                            "example": "REDE_REFERENCIADA"
                          },
                          "description": "Rede de atendimento do seguro contratado."
                        },
                        "targetAudiences": {
                          "type": "array",
                          "items": {
                            "enum": [
                              "PESSOA_NATURAL",
                              "PESSOA_JURIDICA",
                              "AMBAS"
                            ],
                            "type": "string",
                            "example": "PESSOA_NATURAL",
                            "maxLength": 30
                          },
                          "description": "Público-alvo."
                        },
                        "additionalOthers": {
                          "type": "string",
                          "description": "Campo aberto para descrição de cada participante ao selecionar o domínio ‘Outros’ no campo acima ‘Adicionais’"

                        },
                        "assistanceServices": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "$schema": "http://json-schema.org/draft-04/schema#",
                            "required": [
                              "assistanceServicesPackage",
                              "assistanceServicesDetail"
                            ],
                            "properties": {
                              "chargeTypeSignaling": {
                                "enum": [
                                  "GRATUITA",
                                  "PAGA"
                                ],
                                "type": "string",
                                "example": "GRATUITA",
                                "description": "Sinalização em campo exclusivo se o pacote de Assistência é gratuita ou contratada/paga."

                              },
                              "assistanceServicesDetail": {
                                "type": "string",
                                "example": "Perda Parcial - Colisão",
                                "maxLength": 1000,
                                "description": "Serviços de assistência - Detalhamento."
                              },
                              "assistanceServicesPackage": {
                                "type": "array",
                                "items": {
                                  "enum": [
                                    "ATE_10_SERVICOS",
                                    "ATE_20_SERVICOS",
                                    "ACIMA_20_SERVICOS",
                                    "CUSTOMIZAVEL"
                                  ],
                                  "type": "string",
                                  "example": "ATE_10_SERVICOS"
                                },
                                "description": "Pacotes de Assistência - Agrupamento."
                              }
                            },
                            "description": "Serviços de Assistência."
                          }
                        },
                        "termsAndConditions": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "required": [
                              "susepProcessNumber",
                              "definition"
                            ],
                            "properties": {
                              "definition": {
                                "type": "string",
                                "example": "https://ey.exemplo/capitalizacao/tradicional/pdf/condicoes_gerais.pdf",
                                "maxLength": 1024,
                                "description": "Campo aberto (possibilidade de incluir uma url)."
                              },
                              "susepProcessNumber": {
                                "type": "string",
                                "example": "15414.622222/2222-22",
                                "maxLength": 20,
                                "description": "Número do processo SUSEP."
                              }
                            },
                            "description": "Informações dos termos e condições conforme número do processo SUSEP."
                          },
                          "$schema": "http://json-schema.org/draft-04/schema#"
                        },
                        "minimumRequirements": {
                          "type": "object",
                          "$schema": "http://json-schema.org/draft-04/schema#",
                          "required": [
                            "contractingType",
                            "contractingMinRequirement"
                          ],
                          "properties": {
                            "contractingType": {
                              "type": "array",
                              "items": {
                                "enum": [
                                  "COLETIVO",
                                  "INDIVIDUAL",
                                  "AMBAS"
                                ],
                                "type": "string",
                                "example": "COLETIVO"
                              },
                              "description": "Informações sobre todos os requisitos mínimos para contratação."
                            },
                            "contractingMinRequirement": {
                              "type": "string",
                              "example": "https://example.com/mobile-banking",
                              "maxLength": 1024,
                              "description": "Campo aberto contendo todos os requisitos mínimos para contratação (possibilidade de incluir URL)."

                            }
                          },
                          "description": "Produtos de Seguro de Automóvel."
                        },
                        "vehicleOvernightZipCode": {
                          "type": "string",
                          "example": "01311000",
                          "maxLength": 8,
                          "description": "Área de comercialização do seguro do automóvel."
                        }
                      }
                    },
                    "$schema": "http://json-schema.org/draft-04/schema#",
                    "description": "Produtos de Seguro de Automóveis."
                  },
                  "cnpjNumber": {
                    "type": "string",
                    "description": "CNPJ da sociedade pertencente à marca."
                  }
                },
                "description": "Informações referente a sociedade a qual a marca pertence."
              },
              "$schema": "http://json-schema.org/draft-04/schema#"
            }
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "$schema": "http://json-schema.org/draft-04/schema#",
      "required": [
        "totalRecords",
        "totalPages"
      ],
      "properties": {
        "totalPages": {
          "type": "integer",
          "example": 1,
          "description": "Total de páginas para os registros encontrados"
        },
        "totalRecords": {
          "type": "integer",
          "example": 10,
          "description": "Total de registros encontrados"
        }
